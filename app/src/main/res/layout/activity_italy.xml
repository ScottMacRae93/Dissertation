<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItalyActivity"
    android:background="@drawable/wallpaper">


    // Search Recipes Bar
    <TextView
        android:id="@+id/recipes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Recipe Book: Italy"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipes_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawablePadding="20dp"
        android:hint="Search Recipes"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white" />

    // Pasta Button

    <ImageButton
        android:id="@+id/pastabtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/search_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/pasta" />

    // Pizza Button
    <ImageButton
        android:id="@+id/pizzabtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/search_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/pizza" />

    // Risotto Button
    <ImageButton
        android:id="@+id/risottobtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/search_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="288dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/risotto"/>

    // Gelato Button
    <ImageButton
        android:id="@+id/gelatobtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/pastabtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="390dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/gelato" />

    // Cannoli Button
    <ImageButton
        android:id="@+id/cannolibtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/pizzabtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="171dp"
        android:layout_marginTop="390dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/cannoli" />

    // Focaccia Button
    <ImageButton
        android:id="@+id/focacciabtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/risottobtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="290dp"
        android:layout_marginTop="390dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/focaccia" />

    // Pasta Text
    <TextView
        android:id="@+id/pastatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pastabtn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="75dp"
        android:layout_marginTop="0.5dp"
        android:text="Pasta"
        android:textColor="@color/white" />

    // Pizza Text
    <TextView
        android:id="@+id/pizzatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pizzabtn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="203dp"
        android:layout_marginTop="1dp"
        android:text="Pizza"
        android:textColor="@color/white" />

    // Focaccia Text
    <TextView
        android:id="@+id/focacciatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/focacciabtn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="310dp"
        android:layout_marginTop="3dp"
        android:text="Focaccia"
        android:textColor="@color/white" />

    // Risotto Text
    <TextView
        android:id="@+id/risottotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/risottobtn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="315dp"
        android:layout_marginTop="-2dp"
        android:text="Risotto"
        android:textColor="@color/white" />

    // Gelato Text
    <TextView
        android:id="@+id/gelatotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gelatobtn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="70dp"
        android:layout_marginTop="0dp"
        android:text="Gelato"
        android:textColor="@color/white" />

    // Cannoli Text
    <TextView
        android:id="@+id/cannolitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cannolibtn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="195dp"
        android:layout_marginTop="1dp"
        android:text="Cannoli"
        android:textColor="@color/white" />

        // Back Button
    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="@android:color/transparent"
        />


</RelativeLayout>