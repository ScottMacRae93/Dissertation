<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TechniqueActivity"
    android:background="@drawable/wallpaper">

    // Title
    <TextView
        android:id="@+id/techniques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Techniques"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    // Dicing Button
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dicing_button"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/techniques"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_food_bank_24"
            android:padding="20dp"
            android:text="Dicing"
            android:textAlignment="center"
            android:textColor="@color/white" />

    // Sautéing Button
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sauteing_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dicing_button"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_food_bank_24"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Sautéing"
            android:textColor="@color/white" />

    // Blancing Button
        <com.google.android.material.button.MaterialButton
            android:id="@+id/blanching_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sauteing_button"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_food_bank_24"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Blanching"
            android:textColor="@color/white" />

    // Roasting Button
        <com.google.android.material.button.MaterialButton
            android:id="@+id/roasting_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blanching_button"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_food_bank_24"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Roasting"
            android:textColor="@color/white" />

    // Knife Skills Button
    <com.google.android.material.button.MaterialButton
        android:id="@+id/knife_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/roasting_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_food_bank_24"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:text="Knife Skills"
        android:textColor="@color/white" />

    // Back Button
        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            android:backgroundTint="@android:color/transparent"
        />
</RelativeLayout>
