<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PastaActivity"
    android:background="@drawable/wallpaper">

    // Title

    <TextView
        android:id="@+id/recipes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Recipe Book: Pasta"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    // Search Recipes Bar
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipes_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawablePadding="20dp"
        android:hint="Search Pasta Recipes"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white" />

    // Spaghetti Image

    <ImageButton
        android:id="@+id/spaghettibtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/search_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/spaghetti"
        />

    // Lemon Chilli Image
    <ImageButton
        android:id="@+id/lemonchillibutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/search_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/lemonchilli"
         />

    // Feta Image
    <ImageButton
        android:id="@+id/fetapastabtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/search_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="288dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/fetapasta"
         />

    // One Pot Parmesan Image
    <ImageButton
        android:id="@+id/parmesanpastabtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/spaghettibtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="370dp"
        android:scaleType="fitXY"
        android:src="@drawable/parmesanpasta"
         />

    // Lasagna Image
    <ImageButton
        android:id="@+id/lasagnabtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/lemonchillibutton"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="370dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/lasagna"
         />

    // Macaroni Image
    <ImageButton
        android:id="@+id/macaronibtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/fetapastabtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="294dp"
        android:layout_marginTop="370dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/macaroni"
         />

    // Spaghetti Text
    <TextView
        android:id="@+id/spaghettitext"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@id/spaghettibtn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="60dp"
        android:layout_marginTop="2dp"
        android:text=" Spaghetti\nBolognese"
        android:textColor="@color/white" />

    // Lemon Chilli Text
    <TextView
        android:id="@+id/lemonchillitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lemonchillibutton"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="170dp"
        android:layout_marginTop="1dp"
        android:text="Lemon and Chilli\nSpaghetti"
        android:textAlignment="center"
        android:textColor="@color/white" />

    // Feta Pasta Text
    <TextView
        android:id="@+id/fetapastatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fetapastabtn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="290dp"
        android:layout_marginTop="3dp"
        android:text="Baked Feta And \nCherry Tomoato"
        android:textAlignment="center"
        android:textColor="@color/white" />

    // Macaroni Text
    <TextView
        android:id="@+id/macaronitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/macaronibtn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="295dp"
        android:layout_marginTop="2dp"
        android:text="Baked Macaroni \nand Cheese"
        android:textAlignment="center"
        android:textColor="@color/white" />

    // Parmesan Pasta Text
    <TextView
        android:id="@+id/parsemanpastatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/parmesanpastabtn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:text="One Pot\n Chicken Parmesan"
        android:textAlignment="center"
        android:textColor="@color/white" />

    // Lasagna Text
    <TextView
        android:id="@+id/lasagnatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lasagnabtn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="165dp"
        android:layout_marginTop="1dp"
        android:text="Beef and Spinach \nLasagna"
        android:textAlignment="center"
        android:textColor="@color/white" />

    // Back Button
    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

</RelativeLayout>