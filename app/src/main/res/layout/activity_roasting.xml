<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoastingActivity"
    android:background="@drawable/wallpaper">

    // Title
    <TextView
        android:id="@+id/roasting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Roasting"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    // Roasting Bar
    <TextView
        android:id="@+id/roasting_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/roasting_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="#30ffffff"
        android:text="Roasting: How to roast correctly"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textAlignment="center" />

    // Roasting Instructions
    <ListView
        android:id="@+id/roastingsteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/roasting_bar"
        android:background="@color/white" />

    // Back Button
    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="@android:color/transparent"
        />

</RelativeLayout>